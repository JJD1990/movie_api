<div id="<%= dom_id movie %>">
  <p>
    <strong>Title:</strong>
    <%= movie.title %>
  </p>

  <p>
    <strong>Year:</strong>
    <%= movie.year %>
  </p>

  <p>
    <strong>Rating:</strong>
    <%= movie.rating %>
  </p>

  <p>
    <strong>Runtime:</strong>
    <%= movie.runtime %>
  </p>

  <p>
    <strong>Director:</strong>
    <%= movie.director %>
  </p>

  <p>
    <strong>Poster:</strong><br>
    <%= image_tag(movie.poster_url_or_default, alt: "#{movie.title} poster", style: "max-width: 300px;") %>
  </p>
</div>
